{{#if isAuthenticated}}

	<form action="/template" method="post" enctype="multipart/form-data">
		<p>Name : <br> <input type=text name=name required pattern="[a-zA-Z0-9\s]+"></input>*</p>
		<p>Nickname : <br> <input type=text name=nickname required pattern="[a-zA-Z0-9\s]+"></input>*</p>
		<p>Info : <br> <textarea rows="4" <input type=textarea name=info required></textarea></p>
		<p>Template :</p>
		<h3><b>From Template:</b></h3>
		<label class="radio">
			<input type="radio" name="templateName" value="NegotiationScenario" checked="checked">
				<p>Negotiation Scenario</p>
			</input>
		</label>

		<h3><b>From Upload:</b></h3>
		<p>Build : <br> <input type=file name=build></input></p>
		<p>Preview : <br> <input type=file name=image></input></p>

		<p>* denotes required fields.</p>

		<p><input type="Submit" name="Submit" value="Submit"></p>
	</form>




{{else}}
	{{> login}}
{{/if}}
